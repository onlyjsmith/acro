<h1>Listing acronyms</h1>

<table>
  <tr>
    <th>Abbreviation</th>
    <th>Definition</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @acronyms.each do |acronym| %>
  <tr>
    <td><%= acronym.abbreviation %></td>
    <td><%= acronym.definition %></td>
    <td><%= link_to 'Show', acronym %></td>
    <td><%= link_to 'Edit', edit_acronym_path(acronym) %></td>
    <td><%= link_to 'Destroy', acronym, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

